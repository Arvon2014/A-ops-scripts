[program:kafka]
directory={{ deploy_dir }}/kafka/bin
command=/bin/bash kafka-server-start.sh  {{ deploy_dir }}/kafka/config/server.properties
autostart = true
autorestart=unexpected
exitcodes=0,2
stopsignal=KILL
stopwaitsecs=1
startsecs=10
user=root
stopasgroup = true
stdout_logfile_maxbytes=100MB
stdout_logfile_backups=10
redirect_stderr=true
stdout_logfile={{ deploy_dir }}/log/kafka.log
stderr_logfile={{ deploy_dir }}/log/kafka.err
